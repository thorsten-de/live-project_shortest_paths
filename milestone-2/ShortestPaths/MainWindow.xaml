<Window x:Class="ShortestPaths.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShortestPaths"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="400">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Validate Networks">
                <MenuItem Header="Network 1" x:Name="validateNetwork1" Click="validateNetwork1_Click"/>
                <MenuItem Header="Network 2" x:Name="validateNetwork2" Click="validateNetwork2_Click"/>
                <MenuItem Header="Network 3" x:Name="validateNetwork3" Click="validateNetwork3_Click"/>
            </MenuItem>
        </Menu>
        <Label DockPanel.Dock="Bottom"  x:Name="statusLabel" Content="Label" />
        <TextBox x:Name="netTextBox" TextWrapping="Wrap" Text="TextBox" />
    </DockPanel>
</Window>
